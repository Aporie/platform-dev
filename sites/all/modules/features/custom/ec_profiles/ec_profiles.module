<?php
/**
 * @file
 * Code for the EC Profiles feature.
 */

include_once('ec_profiles.features.inc');

function ec_profiles_modules_enabled($modules) {
  if (in_array('ec_profiles', $modules)) { 
    drupal_set_message(t('EC Profiles feature is now active on your site.'));

    //Load the role
    $role = user_role_load_by_name('authenticated user');  

    user_role_grant_permissions($role->rid, array(
      'access user profiles',
    ));
  }
}
function ec_profiles_disable() {
  
  
  //Load the role
  $role = user_role_load_by_name('authenticated user');
  
  user_role_revoke_permissions($role->rid, array(
    'access user profiles',
  ));

  drupal_set_message(t('EC Profiles feature is now disabled on your site.'));	
}
