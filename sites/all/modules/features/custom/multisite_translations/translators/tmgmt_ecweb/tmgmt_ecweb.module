<?php

/**
 * Implements hook_tmgmt_translator_plugin_info().
 */
function tmgmt_ecweb_tmgmt_translator_plugin_info() {
  return array(
    'ecweb' => array(
      'label' => t('ecweb translator'),
      'description' => t('Multisite Translator service.'),
      'plugin controller class' => 'TMGMTEcwebTranslatorPluginController',
      'ui controller class' => 'TMGMTEcwebTranslatorUIController',
      'default settings' => array(
        'api_key' => '',
      ),
    ),
  );
}

/**
 * Local Exception class
 */
class TMGMTEcwebException extends Exception {

  /**
   * @param string $message
   * @param array $data
   *   Associative array of dynamic data that will be inserted into $message.
   * @param int $code
   * @param Exception|null $previous
   */
  function __construct($message = "", $data = array(), $code = 0, Exception $previous = NULL) {
    parent::__construct(strtr($message, $data), $code, $previous);
  }
}
