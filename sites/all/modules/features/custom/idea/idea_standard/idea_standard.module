include_once('idea_standard.features.inc');
include_once('idea_standard.views_alter.inc');


/*
* hook_views_pre_render
*/
function idea_standard_views_pre_render(&$view) {
  if($view->name == 'idea_list' && $view->current_display == 'page_1') {
    if(user_access('create idea content'))  {
      $output = l(t('Create a new idea'),'node/add/idea',array('attributes' => array('type' => 'add', 'action_bar' => 'single', 'btn_group' => 'single')));
      $view->header['area']->options['content'] = $view->header['area']->options['content'].$output;
    }
  }
}


