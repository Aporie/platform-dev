/*
* hook_views_pre_render
*/
function wiki_standard_views_pre_render(&$view) {
  if($view->name == 'wiki_list' && $view->current_display == 'page_1') {
    if(user_access('create wiki content'))  {
      $output = l(t('Create a new wiki'),'node/add/wiki',array('attributes' => array('type' => 'add', 'action_bar' => 'single', 'btn_group' => 'single')));
      $view->header['area']->options['content'] = $view->header['area']->options['content'].$output;
    }
  }
}


