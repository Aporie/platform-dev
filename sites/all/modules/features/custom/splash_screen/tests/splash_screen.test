<?php

/**
 * @file
 * Tests for splash_screen.module.
 */

/**
 * Defines a base class for testing the "Ask a question" module.
 */
class Splash_ScreenWebTestCase extends DrupalWebTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Splash screen',
      'description' => 'Test the splash screen feature.',
      'group' => 'Splash screen',
    );
  }

  public function setUp() {
    parent::setUp('splash_screen');
  }

  protected function assertTitleIsPresent() {
      $elements = $this->xpath("//h1");
      return $this->assertTrue(isset($elements[0]), t('The page contains a h1 title'));
  }


  public function testPageShouldBeAccessible() {
    $this->drupalGet('splash');
    $this->assertResponse(200);
    $this->assertTitleIsPresent();
  }
}