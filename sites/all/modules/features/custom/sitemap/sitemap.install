<?php
/*
*  hook_enable
*/

function sitemap_enable() {
  $item = array(
    'link_path' => 'sitemap',
    'link_title' => t('Site map'),
    'menu_name' => 'main-menu',
    'weight' => '40'
  );
  menu_link_save($item);

  drupal_set_message('Sitemap feature is now enabled on your site.');
}



/*
*  hook_disable
*/

function sitemap_disable() {
  menu_link_delete(NULL, 'sitemap');

  //Activation message
  drupal_set_message('Sitemap feature is now disabled on your site.');
}


