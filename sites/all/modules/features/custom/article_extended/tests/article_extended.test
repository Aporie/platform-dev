<?php

/**
 * @file
 * Tests for article_extended.module.
 */

/**
 * Defines a base class for testing the "article_extended" module.
 */
class ArticleWebTestCase extends DrupalWebTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Article extended',
      'description' => 'Test the article_extended feature.',
      'group' => 'Multisite - Core',
    );
  }

  public function setUp() {
    parent::setUp('article_extended');
    $this->privileged_user = $this->drupalCreateUser(array('administer rules'));
    $this->drupalLogin($this->privileged_user);

  }

  public function testConfigPageShouldBeAccessible() {
    $this->drupalGet('admin/config/workflow/rules/reaction/manage/1');
    $this->assertResponse(200);
  }
}