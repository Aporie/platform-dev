<?php
/**
 * @file
 * Code for the Links feature.
 */

include_once('links_std.features.inc');



/*
 * hook_enable 
 * Edit communities context to add a block
 */
function links_standard_enable(){
  module_enable(array('links_standard_content'));  
}


/*
 * hook_disable 
 * Edit communities context to add a block
 */
function links_standard_disable(){
  module_disable(array('links_standard_content'));  
}



/*
* hook_views_pre_render
*/
function links_standard_views_pre_render(&$view) {

  if($view->name == 'links' && $view->current_display == 'page' && user_access('create links content')) {
    $output = '';
    global $user;

    if(user_access("create links content")){
        $output .= l(t('Create a Link'), 'node/add/links', array('attributes' => array('type' => 'add', 'action_bar' => 'single', 'btn_group' => 'single'),'query' => array()));
    }
    //add menu to the exsiting  header
    if($view->header['area']){
      $view->header['area']->options['content'] = $view->header['area']->options['content'].$output;
    }
  }
}