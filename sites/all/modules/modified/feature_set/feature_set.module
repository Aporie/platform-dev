function _feature_set_batch($features_actions) {
  $num_operations = count($features_actions);
  //drupal_set_message(t('Creating an array of @num operations', array('@num' => $num_operations)));

  $operations = array();
  for ($i = 0; $i < $num_operations; $i++) {
    $operations[] = array('batch_featureset_op', array($features_actions[$i], ""));
  }
  $batch = array(
    'operations' => $operations, 
    'finished' => 'batch_featureset_finished',
  );
  return $batch;
}
