function batch_featureset_op($feature_set_action, $operation_details, &$context) {
  $context['results'][] = $feature_set_action['feature']['title'];
 
  // proccess enable/disable features here
  if($feature_set_action['value'] == 'enable') {
	$context['message'] = $feature_set_action['feature']['title']." enabling";
    feature_set_enable_feature_set($feature_set_action['feature']);
  }
  else  {
	$context['message'] = $feature_set_action['feature']['title']." disabling";

    // before to disable a feature set, we have to check if all features included implement content types and 
    // then if it remains nodes with theses content types
    foreach($feature_set_action['feature']['disable'] as $module_to_disable) {
      $info_file = drupal_get_path('module', $module_to_disable)."/". $module_to_disable.".info";
      $info = drupal_parse_info_file($info_file);

      
      if(isset($info['features']['node'])) { // the feature implements a content type
        $check_node = 0;
        $node_type_warning = array();
        foreach($info['features']['node'] as $node_type) {
          $result = db_select('node', 'n')
            ->fields('n', array('nid'))
            ->condition('type', $node_type,'=')
            ->execute()
            ->fetchAll();
          if(count($result) > 0) { // it exists nodes of this content type
            $check_node++;
            $node_type_warning[] = $node_type;
          }
        }

        if($check_node > 0) {
           drupal_set_message("<b>WARNING</b><br/>".$feature_set_action['feature']['title']." not disabled, you have to remove all <b>".implode(" ",$node_type_warning)."</b> contents.", 'warning');
        }
        else {
          feature_set_disable_feature_set($feature_set_action['feature']);    
        }
      }
      else  {
        feature_set_disable_feature_set($feature_set_action['feature']);
      }
    } 
    
  }

  _batch_update_http_requests();
}


function _batch_update_http_requests() {
  $_SESSION['http_request_count']++;
}


