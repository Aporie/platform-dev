feature_sets[news_standard][title] = 'News'
feature_sets[news_standard][description] = 'Allows contributors to publish news article he wishes to share with the other users. Every user can view the content of the news throught the news slider on homepage.'
feature_sets[news_standard][icon] = 'feature-set-icons/news.png'
feature_sets[news_standard][enable][] = news_standard
feature_sets[news_standard][disable][] = news_standard

feature_sets[ec_profiles][title] = 'Extend Profiles'
feature_sets[ec_profiles][description] = 'Gives a possibility for the administrator to manage information about user\'s profile on the site. He can add some additional fields and define whether the information must be filled by a new user or not, or if user can hide the information or not.'
feature_sets[ec_profiles][icon] = 'feature-set-icons/ec_profiles.png'
