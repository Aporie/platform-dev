feature_sets[ec_profiles][disable][] = ec_profiles

feature_sets[sitemap][title] = 'Sitemap'
feature_sets[sitemap][description] = 'Helps users (mainly new users) to have a quick overview of how the site is organized and what the site proposes to users.'
feature_sets[sitemap][icon] = 'feature-set-icons/sitemap.png'
feature_sets[sitemap][enable][] = sitemap
feature_sets[sitemap][disable][] = sitemap

feature_sets[f_a_q][title] = 'FAQ'
feature_sets[f_a_q][description] = 'Allows administrators to post answers to frequently asked questions. This content is available for every user on the site, directly from its homepage.'
feature_sets[f_a_q][icon] = 'feature-set-icons/faq.png'
feature_sets[f_a_q][enable][] = f_a_q
feature_sets[f_a_q][disable][] = f_a_q

feature_sets[wiki_standard][title] = 'Wikis'
feature_sets[wiki_standard][description] = 'A collaborative content that allows contributors to share information about a specific subject. Every contributor having access to the wiki can modify it and create a new revision. Every user, can view the content of the wiki.'
feature_sets[wiki_standard][icon] = 'feature-set-icons/wiki.png'
feature_sets[wiki_standard][enable][] = wiki_standard
feature_sets[wiki_standard][disable][] = wiki_standard

feature_sets[survey_standard][title] = 'Surveys'
feature_sets[survey_standard][description] = 'Allows administrators to question site users. Every user concerned by the poll/survey can respond as many times as allowed by the survey initiator. Results are stored and some statistics are generated and can be browsed by users. '
feature_sets[survey_standard][icon] = 'feature-set-icons/survey.png'
feature_sets[survey_standard][enable][] = survey_standard
feature_sets[survey_standard][disable][] = survey_standard

feature_sets[events_standard][title] = 'Events'
feature_sets[events_standard][description] = 'Allows contributors to define an event in the calendar. An event is used to store the information about something happening somewhere at a specific day or period of time. Every user can view the content of an event throuht the calendar.'
feature_sets[events_standard][icon] = 'feature-set-icons/events.png'
feature_sets[events_standard][enable][] = events_standard
feature_sets[events_standard][disable][] = events_standard

feature_sets[newsletters][title] = 'Newsletters'
feature_sets[newsletters][description] = 'Gives a possibility to the administrator of the site to send regular emails to site users. Newsletters are based on contents of the site and will inform users about new contents or specific information the administrator would like to communicate.'
feature_sets[newsletters][icon] = 'feature-set-icons/newsletter.png'
feature_sets[newsletters][enable][] = newsletters
feature_sets[newsletters][disable][] = newsletters

